<!-- Student Name: Ben Maxwell -->
<!-- Student Number: S1917932 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_act"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_activity" >

    <!-- Google Maps Fragment -->
    <fragment
        android:id="@+id/quakeMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="387dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_previous"
        android:visibility="visible" />

    <!-- Details Overlay, used for displaying detailed info -->
    <View
        android:id="@+id/details_overlay"
        android:layout_width="416dp"
        android:layout_height="405dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="338dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/details_overlay"
        />

    <View
        android:id="@+id/rightCta"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="560dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/details_cta"
        />

    <!-- Quake Symbol -->
    <View
        android:layout_width="50dp"
        android:layout_height="48.75dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="615dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_quake_light" />

    <TextView
        android:id="@+id/strengthOutput"
        android:layout_width="72dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="604dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:gravity="top"
        />

    <View
        android:id="@+id/leftCta"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="368dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/details_cta"
        />

    <!-- Clock Symbol -->
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="423dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_clock_light" />

    <TextView
        android:id="@+id/dateOutput"
        android:layout_width="90dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="420dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:gravity="top"
        />

    <!-- Description TextViews -->
    <TextView
        android:id="@+id/descHeader"
        android:layout_width="173dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="368dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:text="Quake Description"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="top" />

    <TextView
        android:id="@+id/descTV"
        android:layout_width="352dp"
        android:layout_height="167dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="368dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="top" />

</RelativeLayout>